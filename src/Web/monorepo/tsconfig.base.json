{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@monorepo/shared/data-models": ["libs/shared/data-models/src/index.ts"],
      "@monorepo/shared/identity-b2b": [
        "libs/shared/identity-b2b/src/index.ts"
      ],
      "@monorepo/shared/identity-b2c": [
        "libs/shared/identity-b2c/src/index.ts"
      ],
      "@monorepo/shared/services": ["libs/shared/services/src/index.ts"],
      "@monorepo/application-b2b/dashboard": [
        "libs/application-b2b/dashboard/src/index.ts"
      ],
      "@monorepo/application-b2c/dashboard": [
        "libs/application-b2c/dashboard/src/index.ts"
      ],
      "@monorepo/application-b2b/home": [
        "libs/application-b2b/home/src/index.ts"
      ],
      "@monorepo/application-b2c/home": [
        "libs/application-b2c/home/src/index.ts"
      ],
      "@monorepo/shared/application/services": [
        "libs/shared/application/services/src/index.ts"
      ],
      "@monorepo/shared/application/types": [
        "libs/shared/application/types/src/index.ts"
      ],
      "@monorepo/shared/application/state/students-state": [
        "libs/shared/application/state/students-state/src/index.ts"
      ],
      "@monorepo/shared/application/state/courses-state": [
        "libs/shared/application/state/courses-state/src/index.ts"
      ],
      "@monorepo/shared/application/state/instructors-state": [
        "libs/shared/application/state/instructors-state/src/index.ts"
      ],
      "@monorepo/shared/application/state/parents-state": [
        "libs/shared/application/state/parents-state/src/index.ts"
      ],
      "@monorepo/shared/app-config": ["libs/shared/app-config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
