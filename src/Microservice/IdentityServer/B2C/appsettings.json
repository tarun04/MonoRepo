{
  "Microservices": [
    {
      "Name": "Tenant",
      "BaseUrl": "http://tenant/",
      "BasePath": "api/v1",
      "Paths": [
        {
          "Name": "GetTenantById",
          "Path": "TenantCatalog/{0}"
        },
        {
          "Name": "GetTenantByName",
          "Path": "TenantCatalog/{0}/name"
        }
      ]
    },
    {
      "Name": "Email",
      "BaseUrl": "http://email",
      "BasePath": "api/v1",
      "Paths": [
        {
          "Name": "SendEmail",
          "Path": "email/send"
        }
      ]
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Identity-B2C;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*"
}
