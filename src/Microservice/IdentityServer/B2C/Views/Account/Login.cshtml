@model MonoRepo.Microservice.IdentityServer.B2C.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div id="spinner" class="spinner spinner-grow text-primary" hidden></div>
    <div class="login-box p-5">
        <div class="text-center pb-2 text-primary">
            <h2>monorepo</h2>
        </div>
        <div class="" id="account-page">
            <div class="text-center pb-4">
                <h4 class="font-weight-normal">Sign in</h4>
                <h6 class="font-weight-normal">to continue to Application</h6>
            </div>
            <div class="input-box">
                <input id="email" type="email" placeholder="Enter your email" />
                <span id="email-error" class="error"></span>
            </div>

            <div class="guest-text pb-5">
                <button class="btn text-primary shadow-none fw-500 pl-0">Forgot email?</button>
            </div>

            <div class="guest-text pb-5">
                Not your computer? Use Guest mode to sign in privately.
            </div>

            <div class="float-right w-25">
                <button class="btn btn-primary w-100" id="find-account" onclick="findUser(email.value)">
                    Next
                </button>
            </div>
            <div class="">
                <button class="btn text-primary shadow-none fw-500 pl-0">
                    Create account
                </button>
            </div>
        </div>
        <div class="" id="login-page">
            <div class="text-center pb-4">
                <h4 class="font-weight-normal">Hi <span id="username"></span></h4>
                <h6 class="font-weight-normal" id="email-address"></h6>
            </div>
            <div class="input-box pb-5">
                <input id="password" type="password" placeholder="Enter your password" />
                <span id="password-error" class="error"></span>
                <i id="password-icon" class="eye-icon fa fa-eye" onclick="togglePasswordVisibility()"></i>
            </div>



            <div class="float-right w-25">
                <button class="btn btn-primary w-100" id="login" onclick="login(password.value)">
                    Next
                </button>
            </div>
            <div class="">
                <button class="btn text-primary shadow-none fw-500 pl-0">
                    More ways to sign in
                </button>
            </div>
        </div>
    </div>
</div>
